<h1>Log In</h1>
<h3><%= params['error_message'] %></h3>
<%= form_tag('/login', method: 'post') do %>
    <%= label_tag(:email, "Email:") %>
    <br><%= text_field_tag(:email) %>    
    <br><%= label_tag(:password, "Password:") %>
    <br><%= password_field_tag(:password) %>
    <br><%= submit_tag("Submit") %>
<% end %>
<h1>Sign Up</h1>
<h3><%= params['error_message'] %></h3>
<%= form_tag('/signup', method: 'post') do %>
    <%= hidden_field_tag(:member_number, rand(10 ** 10)) %>
    <%= label_tag(:name, "Name:") %>    
    <br><%= text_field_tag(:name) %>  
    <br><%= label_tag(:address, "Address:") %>    
    <br><%= text_field_tag(:address) %>   
    <br><%= label_tag(:phone, "Phone:") %>    
    <br><%= text_field_tag(:phone) %>    
    <br><%= label_tag(:email, "Email:") %>    
    <br><%= text_field_tag(:email) %> 
    <br><%= label_tag(:license_number, "License number:") %>    
    <br><%= text_field_tag(:license_number) %>    
    <br><%= label_tag(:password, "Password:") %>
    <br><%= password_field_tag(:password) %>
    <br><%= label_tag(:password2, "Confirm password:") %>
    <br><%= password_field_tag(:password2) %>
    <br><%= label_tag(:annual_fee, "Default annual fee: $150") %>
    <br><%= hidden_field_tag(:annual_fee, 150) %>
    <br><%= submit_tag("Submit") %>
<% end %>